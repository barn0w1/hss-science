# --- Platform: General ---
ENV=dev
SERVICE_NAME=accounts
LOG_LEVEL=info
LOG_FORMAT=text # json / text

# --- Platform: Server Ports ---
HTTP_PORT=8080
GRPC_PORT=50051

# --- Platform: CORS ---
# Comma separated allowed origins. Use "*" for dev.
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://hss-science.org

# --- Platform: Database ---
DB_HOST=localhost
DB_PORT=5432
DB_USER=accounts_user
DB_PASSWORD=accounts_pass
DB_NAME=accounts_db
# disable, require, verify-full
DB_SSLMODE=disable

# --- Service: Discord OAuth ---
DISCORD_CLIENT_ID=your_client_id
DISCORD_CLIENT_SECRET=your_client_secret
# Must match the URL registered in Discord Portal
DISCORD_REDIRECT_URL=http://localhost:8080/api/v1/oauth/callback

# --- Service: Security ---
# HMAC secret for OAuth state
STATE_SECRET=change_me_to_a_secure_random_string
SESSION_TTL_HOURS=168
AUTH_CODE_TTL_SECONDS=60
OAUTH_STATE_TTL_SECONDS=300
SESSION_COOKIE_NAME=accounts_session